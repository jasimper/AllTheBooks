<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Author</th>
      <th>Title</th>
      <th>Description</th>
      <th>Pub date</th>
      <th>Genre</th>
      <th>Format</th>
      <th>Image url</th>
      <th>Has read</th>
      <th>Series</th>
      <th>Series num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.pub_date %></td>
        <td><%= book.genre_id %></td>
        <td><%= book.format_id %></td>
        <td><%= book.image_url %></td>
        <td><%= book.has_read %></td>
        <td><%= book.series %></td>
        <td><%= book.series_num %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

