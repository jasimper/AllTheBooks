<div class="form">
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field half">
    <%= f.label :isbn %><br>
    <%= f.text_field :isbn %>
  </div>
  <div class="field half">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field whole">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field whole">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field whole">
    <%= f.label :pub_date %><br>
    <%= f.date_field :pub_date %>
  </div>
  <div class="field half">
    <%= f.label :genre_id %><br>
    <!-- <%= f.number_field :genre_id %> -->
    <%= f.collection_select(:genre_id, Genre.order('genre ASC'), :id, :genre, {:include_blank => 'Select a Genre'}) %>
  </div>
  <div class="field half">
    <%= f.label :format_id %><br>
    <!-- <%= f.number_field :format_id %> -->
    <%= f.collection_select(:format_id, Format.all, :id, :format, {:include_blank => 'Select a Format'}) %>
  </div>
  <div class="field whole">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field third">
    <%= f.label :has_read %><br>
    <%= f.check_box :has_read %>
  </div>
  <div class="field third">
    <%= f.label :series %><br>
    <%= f.check_box :series %>
  </div>
  <div class="field third">
    <%= f.label :series_num %><br>
    <%= f.number_field :series_num %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
