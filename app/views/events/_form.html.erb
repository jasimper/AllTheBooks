<div class="form">
  <%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event, 'Book Title and Author' %><br>
    <%= f.text_field :event %>
  </div>
  <div class="field">
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date %>
  </div>
  <div class="field">
    <%= f.fields_for :notes do |n| %>
      <%= n.label :info, 'Notes' %> <br>
      <%= n.text_area :info %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit 'Save to Calendar'%>
  </div>
<% end %>
</div>
